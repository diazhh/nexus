# Nexus ML Service Configuration
# Copy this file to .env and update values

# Service Settings
ML_DEBUG=false
ML_API_HOST=0.0.0.0
ML_API_PORT=8090

# Database Connection
ML_DB_HOST=localhost
ML_DB_PORT=5432
ML_DB_NAME=nexus
ML_DB_USER=postgres
ML_DB_PASSWORD=postgres

# Nexus Java Backend
ML_NEXUS_API_URL=http://localhost:8080
ML_NEXUS_API_TIMEOUT=30

# Kafka Settings (for real-time telemetry processing)
ML_KAFKA_ENABLED=true
ML_KAFKA_BOOTSTRAP_SERVERS=localhost:9092
ML_KAFKA_CONSUMER_GROUP=nexus-ml-service
ML_KAFKA_TELEMETRY_TOPIC=tb.rule-engine.telemetry
ML_KAFKA_ALARM_TOPIC=tb.rule-engine.alarms
ML_KAFKA_AUTO_OFFSET_RESET=latest

# MLflow
ML_MLFLOW_TRACKING_URI=http://localhost:5000
ML_MLFLOW_EXPERIMENT_NAME=nexus-po-models

# Model Storage
ML_MODEL_STORAGE_PATH=/var/lib/nexus/ml-models

# Training Settings
ML_MAX_CONCURRENT_TRAINING_JOBS=2
ML_TRAINING_TIMEOUT_HOURS=4

# Prediction Thresholds
ML_FAILURE_PROBABILITY_THRESHOLD=0.7
ML_ANOMALY_SCORE_THRESHOLD=0.8
ML_HEALTH_CRITICAL_THRESHOLD=30
ML_HEALTH_POOR_THRESHOLD=50
ML_HEALTH_FAIR_THRESHOLD=70
ML_HEALTH_GOOD_THRESHOLD=85
