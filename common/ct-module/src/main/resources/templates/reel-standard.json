{
  "templateId": "reel-standard-v1",
  "name": "Standard CT Reel",
  "description": "Standard Coiled Tubing Reel for tubing up to 3.5\" OD",
  "version": "1.0.0",
  "category": "CT_REEL",
  "specifications": {
    "maxTubingOD": 3.5,
    "maxTubingLength": 25000,
    "drumDiameter": 96,
    "maxWorkingPressure": 15000
  },
  "assetHierarchy": {
    "root": {
      "type": "CT_REEL",
      "name": "{{reelCode}} - {{reelName}}",
      "label": "{{reelName}}",
      "attributes": {
        "reelCode": "{{reelCode}}",
        "manufacturer": "{{manufacturer}}",
        "serialNumber": "{{serialNumber}}",
        "drumDiameter": 96,
        "maxTubingOD": 3.5,
        "maxTubingLength": 25000,
        "maxWorkingPressure": 15000,
        "status": "AVAILABLE"
      },
      "telemetryKeys": [
        "currentLengthOnReel",
        "rotationSpeed",
        "tensionLbf",
        "levelWindPosition"
      ],
      "children": [
        {
          "type": "CT_TUBING",
          "name": "{{reelCode}} - Tubing String",
          "label": "Tubing String",
          "relation": "Contains",
          "attributes": {
            "tubingOD": "{{tubingOD}}",
            "tubingID": "{{tubingID}}",
            "wallThickness": "{{wallThickness}}",
            "material": "{{material}}",
            "grade": "{{grade}}",
            "totalLength": "{{totalLength}}",
            "manufactureDate": "{{manufactureDate}}",
            "initialFatigueLife": 100.0,
            "currentFatigueLife": 100.0
          },
          "telemetryKeys": [
            "currentFatigueLife",
            "cycleCount",
            "maxStressExperienced",
            "lastInspectionDate"
          ]
        }
      ]
    }
  },
  "dashboards": [
    {
      "name": "{{reelCode}} - Reel Lifecycle",
      "description": "Lifecycle monitoring dashboard for CT reel",
      "widgets": [
        "fatigue_progress",
        "cycle_counter",
        "tubing_specs",
        "inspection_history"
      ]
    }
  ],
  "alarmRules": [
    {
      "name": "Low Fatigue Life",
      "condition": "currentFatigueLife < 20.0",
      "severity": "WARNING"
    },
    {
      "name": "Critical Fatigue Life",
      "condition": "currentFatigueLife < 10.0",
      "severity": "CRITICAL"
    }
  ]
}
